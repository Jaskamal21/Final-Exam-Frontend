<!-- Define a function to render each goal -->
<% function renderGoal(goal) { %>
<div class="item-preview">
  <a href="/single-goal/<%= goal._id %>">
    <h2>Title: <%= goal.title %></h2>
  </a>
</div>
<% } %>

<!DOCTYPE html>
<html lang="en">
  <!-- Pass a JavaScript variable to a partial in EJS -->
  <%- include('partials/head.ejs', { title: "Home page" }) %>

  <body>
    <%- include('partials/navbar.ejs') %> <%- include('partials/hero.ejs') %>
    <div style="display: flex">
      <div class="content">
        <div class="home">
          <div class="item-list">
            <% if (goals.length > 0) { %>
            <!-- Call the renderGoal function for each goal -->
            <% goals.forEach(renderGoal); %> <% } else { %>
            <p>No goals found.</p>
            <% } %>
          </div>
        </div>
      </div>

      <div class="content">
        <div class="create">
          <h2>Add a New Goal</h2>
          <form action="/addGoal" method="POST">
            <label>Title:</label
            ><input type="text" value="" id="title" name="title" required />

            <label for="description">Description:</label>
            <textarea
              value=""
              id="description"
              name="description"
              rows="4"
              required
            ></textarea
            ><br />

            <label for="targetDate">Target Date:</label>
            <input
              type="date"
              id="targetDate"
              name="targetDate"
              required
            /><br />

            <label for="achieved">Achieved:</label>
            <input type="checkbox" id="achieved" name="achieved" /><br />

            <button type="submit">Add Goal</button>
          </form>
        </div>
      </div>
    </div>
    <%- include('partials/ads.ejs') %> <%- include('partials/footer.ejs') %>
  </body>
</html>
